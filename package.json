{
  "name": "chatemotes-api",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "prepare:db": "pnpm --filter='./packages/prisma' run deploy && pnpm --filter='./packages/prisma' run seed",
    "start": "pnpm run prepare:db && pnpm -r --filter='./apps/*' run start",
    "dev": "pnpm -r --filter='./apps/*' run dev",
    "build": "pnpm -r --filter='./apps/*' run build",
    "format": "prettier --write --ignore-unknown **",
    "seed": "cd packages/prisma && pnpm seed"
  },
  "devDependencies": {
    "@crashmax/prettier-config": "^2.0.4",
    "@crashmax/tsconfig": "^1.0.2",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "tsx": "^3.10.3",
    "typescript": "^4.8.4"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "npm": "^7.0.0",
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
